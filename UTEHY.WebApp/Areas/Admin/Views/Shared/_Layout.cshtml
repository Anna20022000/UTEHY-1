<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Limitless - Responsive Web Application Kit by Eugene Kopyov</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Assets/css/core.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/Admin/Assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="~/Areas/Admin/Assets/images/logo-web.ico" type="image/png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">

    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/loaders/pace.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/loaders/blockui.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/ui/nicescroll.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/ui/drilldown.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/visualization/d3/d3.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/visualization/d3/d3_tooltip.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/forms/styling/switchery.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/forms/selects/bootstrap_multiselect.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/ui/moment/moment.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/pickers/daterangepicker.js"></script>

    <script type="text/javascript" src="~/Areas/Admin/Assets/js/core/app.js"></script>

    <script type="text/javascript" src="~/Areas/Admin/Assets/js/plugins/ui/ripple.min.js"></script>
    <!-- /theme JS files -->
    <!--Nhúng link angularjs và các ui của angularjs-->
    <script src="~/Assets/angular/angular.js"></script>
    <script src="~/Areas/Admin/app/app.js"></script>
    <script src="~/Areas/Admin/app/shared/modules/UTEHY.Common.js"></script>
    <script src="~/Areas/Admin/app/shared/services/notificationService.js"></script>
    <script src="~/Areas/Admin/app/components/navbars/navbarController.js"></script>
</head>

<body ng-app="UTEHY">

    @{
        var user = (UTEHY.WebApp.Common.UserLogin)Session[UTEHY.WebApp.Common.UserCommon.USER_SESSION];
    }
    <!-- Main navbar -->
    <div class="navbar navbar-inverse bg-indigo">
        <div class="navbar-header">
            <a class="navbar-brand" href="/Admin/Home">ĐẠI HỌC SƯ PHẠM KỸ THUẬT HƯNG YÊN - KHOA CÔNG NGHỆ THÔNG TIN</a>

            <ul class="nav navbar-nav pull-right visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
            </ul>
        </div>

        <div class="navbar-collapse collapse" id="navbar-mobile">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown language-switch">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Areas/Admin/Assets/images/flags/vn.png" class="position-left" alt="">
                        Việt Nam
                        <span class="caret"></span>
                    </a>

                    <ul class="dropdown-menu">
                        <li><a class="vietnam"><img src="~/Areas/Admin/Assets/images/flags/vn.png" alt=""> Việt Nam</a></li>
                        <li><a class="english"><img src="~/Areas/Admin/Assets/images/flags/gb.png" alt=""> English</a></li>
                    </ul>
                </li>

                <li class="dropdown dropdown-user">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Areas/Admin/Assets/images/admin.png" alt="">
                        <span>@user.Name</span>
                        <i class="caret"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="#"><i class="icon-user-plus"></i> Thông tin</a></li>
                        <li><a href="#"><i class="icon-cog5"></i> Đổi mật khẩu</a></li>
                        <li><a href="#"><i class="icon-switch2"></i> Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- /main navbar -->
    <!-- Second navbar -->
    <div class="navbar navbar-default" id="navbar-second">
        <ul class="nav navbar-nav no-border visible-xs-block">
            <li><a class="text-center collapsed" data-toggle="collapse" data-target="#navbar-second-toggle"><i class="icon-menu7"></i></a></li>
        </ul>

        <div class="navbar-collapse collapse" id="navbar-second-toggle" ng-controller="navbarController">
            <ul class="nav navbar-nav navbar-nav-material">
                <li class="active"><a href="/Admin/Home"><i class="icon-display4 position-left"></i> TRANG CHỦ</a></li>

                <li class="dropdown" ng-repeat="item in functions">
                    <a href="/Admin{{item.Url}}" class="dropdown-toggle" style="font-size:11px;" data-toggle="dropdown">
                        <i class="{{item.Icons}}"></i> {{item.Name}} <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu width-200" ng-if="item.children.length > 0">
                        <li ng-repeat="children in item.children">
                            <a href="/Admin{{children.Url}}" class="dropdown-toggle" style="font-size:11px">
                                <i class="{{children.Icons}}"></i> {{children.Name}}
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- /second navbar -->
    <!-- Page header -->
    <!-- /page header -->
    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            @RenderBody()
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->
    <!-- Footer -->
    <div class="footer text-muted" style="bottom: 16px">
        &copy; 2020. <a href="#" style="color:black">TRUNG TÂM PHẦN MỀM.</a>
    </div>
    <!-- /footer -->
</body>
</html>
